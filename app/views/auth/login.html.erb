<h1 class="text-4xl font-bold">
    Please identify yourself
</h1>

<%= form_with url: do_login_path, class: 'w-3/4 mx-auto my-8 p-4' do |form| %>
    <% if @return_to %>
        <%= form.hidden_field :return_to, value: @return_to %>
    <% end %>
    <div class="leading-8">
        <%= form.label :username, class: 'w-full block' %>
        <%= form.text_field :username, class: 'rounded border-2 focus:border-blue-800' %>
    </div>
    <div class="h-8"></div>
    <div class="leading-8">
        <%= form.label :password, class: 'w-full block' %>
        <%= form.password_field :password, class: 'rounded border-2 focus:border-blue-800' %>
    </div>
    <div class="h-8"></div>
    <div>
        <%= form.submit :Submit, class: 'p-4 bg-blue-800 text-white rounded' %>
    </div>
<% end %>
